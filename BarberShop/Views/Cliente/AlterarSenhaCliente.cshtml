@using System.Security.Claims
@{
    ViewData["Title"] = "Alterar Senha";
}
<div id="alterarSenhaPageCliente"></div>
<div class="container mt-5" id="alterarSenhaPageCliente">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card bg-dark text-light p-4" id="alterarSenhaCardCliente">
                <h3 class="text-center text-danger mb-4">Alterar sua Senha</h3>

                <form id="alterarSenhaFormCliente">
                    <input type="hidden" id="clienteIdCliente" value="@User.FindFirstValue(ClaimTypes.NameIdentifier)" />

                    <!-- Senha Atual -->
                    <div class="form-group mb-3 position-relative">
                        <label for="senhaAtualCliente">Senha Atual</label>
                        <input type="password" id="senhaAtualCliente" class="form-control text-center" placeholder="Digite sua senha atual" required />
                        <span id="toggleSenhaAtualCliente" style="position: absolute; right: 10px; top: 50%; transform: translateY(-50%); cursor: pointer; color: #6c757d; margin-top: 10px;">
                            <i class="fas fa-eye"></i>
                        </span>
                    </div>

                    <!-- Nova Senha -->
                    <div class="form-group mb-3 position-relative">
                        <label for="novaSenhaCliente">Nova Senha</label>
                        <input type="password" id="novaSenhaCliente" class="form-control text-center" placeholder="Digite sua nova senha" required />
                        <span id="toggleNovaSenhaCliente" style="position: absolute; right: 10px; top: 50%; transform: translateY(-50%); cursor: pointer; color: #6c757d; margin-top: 10px;">
                            <i class="fas fa-eye"></i>
                        </span>
                    </div>

                    <!-- Validador de força da senha -->
                    <div class="mb-4">
                        <p class="mb-1 text-center">A nova senha deve conter:</p>
                        <ul id="passwordRequirementsAlterarSenhaCliente" class="list-unstyled text-center">
                            <li id="lengthRequirementAlterarSenhaCliente" class="text-danger">• Pelo menos 8 caracteres</li>
                            <li id="uppercaseRequirementAlterarSenhaCliente" class="text-danger">• Uma letra maiúscula (A-Z)</li>
                            <li id="lowercaseRequirementAlterarSenhaCliente" class="text-danger">• Uma letra minúscula (a-z)</li>
                            <li id="numberRequirementAlterarSenhaCliente" class="text-danger">• Um número (0-9)</li>
                            <li id="specialRequirementAlterarSenhaCliente" class="text-danger">• Um caractere especial (!&#64;#$%^&*)</li>
                        </ul>
                    </div>

                    <button type="submit" class="btn btn-danger btn-block">Alterar Senha</button>
                </form>
            </div>
        </div>
    </div>
    <div class="mt-4 text-center">
        <button class="btn btn-secondary" onclick="history.back()">Voltar</button>
    </div>
</div>
