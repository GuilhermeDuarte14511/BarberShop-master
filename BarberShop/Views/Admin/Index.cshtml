@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Ambiente Administrativo";

}

<div id="adminDashboard" class="container-fluid p-4">
    <input type="hidden" id="UserIdAdm" value="@ViewData["UserId"]" />
    <!-- Cabeçalho do dashboard -->
    <div id="headerContainer" class="mb-4">
        <h2 class="text-red mb-1">Bem-vindo ao Dashboard Administrativo</h2>
        <p class="mb-0">Esse é o painel principal do sistema administrativo da barbearia.</p>

        <!-- Mensagem de aviso para dispositivos móveis -->
        <div id="mobileMessage" class="alert alert-warning text-center d-none">
            Para melhor visualização dos gráficos, acesse via computador.
        </div>
    </div>

    <!-- Botão para adicionar relatório -->
    <div id="buttonContainer" class="d-flex align-items-start mb-4">
        <button class="btn btn-primary me-3" data-bs-toggle="modal" data-bs-target="#addReportModal">
            Adicionar Relatório
        </button>
    </div>


    <div id="dashboard-container" class="row mt-4 g-4">
        <!-- Agendamentos da Semana -->
        <div class="col-lg-4 col-md-6 col-12 dashboard-card" id="agendamentosSemanaChartCard">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5>Agendamentos da Semana</h5>
                    <div class="dropdown">
                        <button class="btn btn-light btn-sm" type="button" id="agendamentosSemanaOptions" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-three-dots"></i>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="agendamentosSemanaOptions">
                            <li><a class="dropdown-item export-to-excel" href="#" data-chart="agendamentosSemanaChart">Exportar para Excel</a></li>
                        </ul>
                    </div>
                </div>
                <div class="card-body">
                    <canvas id="agendamentosSemanaChart"></canvas>
                </div>
            </div>
        </div>

        <!-- Serviços Mais Solicitados -->
        <div class="col-lg-4 col-md-6 col-12 dashboard-card" id="servicosMaisSolicitadosChartCard">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5>Serviços Mais Solicitados</h5>
                    <div class="dropdown">
                        <button class="btn btn-light btn-sm" type="button" id="servicosMaisSolicitadosOptions" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-three-dots"></i>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="servicosMaisSolicitadosOptions">
                            <li><a class="dropdown-item export-to-excel" href="#" data-chart="servicosMaisSolicitadosChart">Exportar para Excel</a></li>
                        </ul>
                    </div>
                </div>
                <div class="card-body">
                    <canvas id="servicosMaisSolicitadosChart"></canvas>
                </div>
            </div>
        </div>

        <!-- Lucro por Barbeiro -->
        <div class="col-lg-4 col-md-6 col-12 dashboard-card" id="lucroPorBarbeiroChartCard">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5>Lucro por Barbeiro</h5>
                    <div class="dropdown">
                        <button class="btn btn-light btn-sm" type="button" id="lucroPorBarbeiroOptions" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-three-dots"></i>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="lucroPorBarbeiroOptions">
                            <li><a class="dropdown-item export-to-excel" href="#" data-chart="lucroPorBarbeiroChart">Exportar para Excel</a></li>
                        </ul>
                    </div>
                </div>
                <div class="card-body">
                    <canvas id="lucroPorBarbeiroChart"></canvas>
                </div>
            </div>
        </div>

        <!-- Atendimentos por Barbeiro -->
        <div class="col-lg-4 col-md-6 col-12 dashboard-card" id="atendimentosPorBarbeiroChartCard">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5>Atendimentos por Barbeiro</h5>
                    <div class="dropdown">
                        <button class="btn btn-light btn-sm" type="button" id="atendimentosPorBarbeiroOptions" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-three-dots"></i>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="atendimentosPorBarbeiroOptions">
                            <li><a class="dropdown-item export-to-excel" href="#" data-chart="atendimentosPorBarbeiroChart">Exportar para Excel</a></li>
                        </ul>
                    </div>
                </div>
                <div class="card-body">
                    <canvas id="atendimentosPorBarbeiroChart"></canvas>
                </div>
            </div>
        </div>

        <!-- Lucro da Semana -->
        <div class="col-lg-6 col-md-6 col-12 dashboard-card" id="lucroSemanaChartCard">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5>Lucro da Semana</h5>
                    <div class="dropdown">
                        <button class="btn btn-light btn-sm" type="button" id="lucroSemanaOptions" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-three-dots"></i>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="lucroSemanaOptions">
                            <li><a class="dropdown-item export-to-excel" href="#" data-chart="lucroSemanaChart">Exportar para Excel</a></li>
                        </ul>
                    </div>
                </div>
                <div class="card-body">
                    <canvas id="lucroSemanaChart"></canvas>
                </div>
            </div>
        </div>

        <!-- Lucro do Mês -->
        <div class="col-lg-6 col-md-6 col-12 dashboard-card" id="lucroMesChartCard">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5>Lucro do Mês</h5>
                    <div class="dropdown">
                        <button class="btn btn-light btn-sm" type="button" id="lucroMesOptions" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-three-dots"></i>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="lucroMesOptions">
                            <li><a class="dropdown-item export-to-excel" href="#" data-chart="lucroMesChart">Exportar para Excel</a></li>
                        </ul>
                    </div>
                </div>
                <div class="card-body">
                    <canvas id="lucroMesChart"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- Modal para criação de relatórios personalizados -->
<div class="modal fade" id="addReportModal" tabindex="-1" aria-labelledby="addReportModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addReportModalLabel">Criar Novo Relatório</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="createReportForm">
                    <div class="mb-3">
                        <label for="reportType" class="form-label">Tipo de Relatório</label>
                        <select id="reportType" class="form-select">
                            <option value="agendamentosPorStatus">Agendamentos por Status</option>
                            <option value="servicosMaisSolicitados">Serviços Mais Solicitados</option>
                            <option value="lucroPorFormaPagamento">Lucro por Forma de Pagamento</option>
                            <option value="atendimentosPorBarbeiro">Atendimentos por Barbeiro</option>
                            <option value="clientesFrequentes">Clientes Frequentes</option>
                            <option value="pagamentosPorStatus">Pagamentos por Status</option>
                            <option value="servicosPorPreco">Serviços por Faixa de Preço</option>
                            <option value="lucroPorPeriodo">Lucro Diário/Semanal/Mensal</option>
                            <option value="tempoMedioPorServico">Tempo Médio por Tipo de Serviço</option>
                            <option value="agendamentosCancelados">Agendamentos Cancelados</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="reportPeriod" class="form-label">Período</label>
                        <select id="reportPeriod" class="form-select">
                            <option value="30">Últimos 30 dias</option>
                            <option value="15">Últimos 15 dias</option>
                            <option value="7">Últimos 7 dias</option>
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" id="addReportButton">Adicionar Relatório</button>
            </div>
        </div>
    </div>
</div>
