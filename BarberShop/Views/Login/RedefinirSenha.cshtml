@{
    ViewData["Title"] = "Redefinir Senha";
}
<div id="redefinirSenhaPage"></div>
<div class="container mt-5" id="redefinirSenhaPage">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card bg-dark text-light p-4" id="redefinirSenhaCard">
                <h3 class="text-center text-danger mb-4">Redefinir sua Senha</h3>

                <form id="redefinirSenhaForm">
                    <input type="hidden" id="clienteId" value="@ViewData["ClienteId"]" />
                    <input type="hidden" id="token" value="@ViewData["Token"]" />

                    <div class="form-group mb-3 position-relative">
                        <label for="novaSenhaRedefinir">Nova Senha</label>
                        <input type="password" id="novaSenhaRedefinir" class="form-control text-center" placeholder="Digite sua nova senha" required />
                        <span id="toggleNovaSenhaRedefinir" style="position: absolute; right: 10px; top: 50%; transform: translateY(-50%); cursor: pointer; color: #6c757d; margin-top: 10px;">
                            <i class="fas fa-eye"></i>
                        </span>
                    </div>

                    <div class="form-group mb-3 position-relative">
                        <label for="confirmarSenhaRedefinir">Confirmar Senha</label>
                        <input type="password" id="confirmarSenhaRedefinir" class="form-control text-center" placeholder="Confirme sua nova senha" required />
                        <span id="toggleConfirmarSenhaRedefinir" style="position: absolute; right: 10px; top: 50%; transform: translateY(-50%); cursor: pointer; color: #6c757d; margin-top: 10px;">
                            <i class="fas fa-eye"></i>
                        </span>
                        <div id="errorMessageRedefinir" class="text-danger mt-2" style="display:none;">As senhas não coincidem.</div>
                    </div>

                    <!-- Validador de força da senha -->
                    <div class="mb-4">
                        <p class="mb-1 text-center">A senha deve conter:</p>
                        <ul id="passwordRequirementsRedefinir" class="list-unstyled text-center">
                            <li id="lengthRequirementRedefinir" class="text-danger">• Pelo menos 8 caracteres</li>
                            <li id="uppercaseRequirementRedefinir" class="text-danger">• Uma letra maiúscula (A-Z)</li>
                            <li id="lowercaseRequirementRedefinir" class="text-danger">• Uma letra minúscula (a-z)</li>
                            <li id="numberRequirementRedefinir" class="text-danger">• Um número (0-9)</li>
                            <li id="specialRequirementRedefinir" class="text-danger">• Um caractere especial (!&#64;#$%^&*)</li>
                        </ul>
                    </div>

                    <button type="submit" class="btn btn-danger btn-block">Redefinir Senha</button>
                </form>
            </div>
        </div>
    </div>
</div>
