@{
    ViewData["Title"] = "Redefinir Senha - Admin";
}
<div id="redefinirSenhaPageAdmin"></div>
<div class="container mt-5" id="redefinirSenhaPageAdmin">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card bg-dark text-light p-4" id="redefinirSenhaCardAdmin">
                <h3 class="text-center text-danger mb-4">Redefinir sua Senha Administrativa</h3>

                <form id="redefinirSenhaFormAdmin">
                    <input type="hidden" id="usuarioIdAdmin" value="@ViewData["UsuarioId"]" />
                    <input type="hidden" id="tokenAdmin" value="@ViewData["Token"]" />

                    <div class="form-group mb-3 position-relative">
                        <label for="novaSenhaRedefinirAdmin">Nova Senha</label>
                        <input type="password" id="novaSenhaRedefinirAdmin" class="form-control text-center" placeholder="Digite sua nova senha" required />
                        <span id="toggleNovaSenhaRedefinirAdmin" style="position: absolute; right: 10px; top: 50%; transform: translateY(-50%); cursor: pointer; color: #6c757d; margin-top: 10px;">
                            <i class="fas fa-eye"></i>
                        </span>
                    </div>

                    <div class="form-group mb-3 position-relative">
                        <label for="confirmarSenhaRedefinirAdmin">Confirmar Senha</label>
                        <input type="password" id="confirmarSenhaRedefinirAdmin" class="form-control text-center" placeholder="Confirme sua nova senha" required />
                        <span id="toggleConfirmarSenhaRedefinirAdmin" style="position: absolute; right: 10px; top: 50%; transform: translateY(-50%); cursor: pointer; color: #6c757d; margin-top: 10px;">
                            <i class="fas fa-eye"></i>
                        </span>
                        <div id="errorMessageRedefinirAdmin" class="text-danger mt-2" style="display:none;">As senhas não coincidem.</div>
                    </div>

                    <!-- Validador de força da senha -->
                    <div class="mb-4">
                        <p class="mb-1 text-center">A senha deve conter:</p>
                        <ul id="passwordRequirementsRedefinirAdmin" class="list-unstyled text-center">
                            <li id="lengthRequirementRedefinirAdmin" class="text-danger">• Pelo menos 8 caracteres</li>
                            <li id="uppercaseRequirementRedefinirAdmin" class="text-danger">• Uma letra maiúscula (A-Z)</li>
                            <li id="lowercaseRequirementRedefinirAdmin" class="text-danger">• Uma letra minúscula (a-z)</li>
                            <li id="numberRequirementRedefinirAdmin" class="text-danger">• Um número (0-9)</li>
                            <li id="specialRequirementRedefinirAdmin" class="text-danger">• Um caractere especial (!&#64;#$%^&*)</li>
                        </ul>
                    </div>

                    <button type="submit" class="btn btn-danger btn-block">Redefinir Senha</button>
                </form>
            </div>
        </div>
    </div>
</div>
